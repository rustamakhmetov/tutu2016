<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Stations:</strong>
    <table>
      <tbody>
      <% @route.stations.each do |railway_station| %>
          <tr>
            <td><%= railway_station.title %></td>
            <td><%= link_to '[X]', delete_station_route_path(@route, railway_station), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
</p>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Add stations', stations_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
