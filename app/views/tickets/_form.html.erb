<div class="row">
  <%= form_for([@user, @ticket], :html => {:class => 'form-horizontal', :role => 'form'}) do |f| %>
      <%= render 'common/errors', resource: @ticket %>

      <div class="form-group">
        <%= f.label :train %>
        <%= f.select :train_id, options_from_collection_for_select(Train.all, "id", "number", @train.try(:id)), class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :start_station %>
        <%= f.select :start_station_id, options_from_collection_for_select(RailwayStation.all, "id", "title", @start_station.try(:id)) %>
      </div>

      <div class="form-group">
        <%= f.label :end_station %>
        <%= f.select :end_station_id, options_from_collection_for_select(RailwayStation.all, "id", "title", @end_station.try(:id)) %>
      </div>

      <div class="form-group">
        <%= f.label :fio %>
        <%= f.text_field :fio, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :passport %>
        <%= f.text_field :passport, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit t('.submit', action: @ticket.new_record? ? t('common.action.buy') : t('common.action.edit')),
                     class: "btn btn-primary btn-sm", style: "color: white;" %>
        <%= link_to t('common.action.back'), url_for(:back), class: "btn btn-primary btn-sm", style: "color: white;" %>
      </div>

  <% end %>
</div>