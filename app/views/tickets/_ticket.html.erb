<tr>
  <td><%= ticket.train.number %></td>
  <td><%= ticket.start_station.title %></td>
  <td><%= ticket.end_station.title %></td>
  <td><%= ticket.fio %></td>
  <td><%= ticket.passport %></td>
  <td>
    <%= link_to t('common.action.show'), user_ticket_path(@user, ticket), class: "btn btn-primary btn-xs", style: "color: white;" %>
    <%= link_to t('common.action.delete'), user_ticket_path(@user, ticket), method: :delete, data: { confirm: t('common.action.confirm') }, class: "btn btn-primary btn-xs", style: "color: white;" %>
  </td>
</tr>