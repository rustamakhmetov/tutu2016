<%= form_for([:admin, route], html: {style: "display: #{hidden ? 'none' : 'block'};"}) do |f| %>
  <%= render 'common/errors', resource: route %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field" style="<%= small ? 'display: none' : '' %>">
    <%= f.label :station_ids %>:<br>
    <%=
      f.collection_select :station_ids, RailwayStation.all, :id, :title, {}, {:multiple => true}
    %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: route.new_record? ? t('common.action.create') : t('common.action.edit')) %>
    <% if small %>
        <%= f.button "Отменить", class: "btn_route_cancel", data: { route_id: route.id }, type: 'button' %>
    <% end %>
  </div>
<% end %>
