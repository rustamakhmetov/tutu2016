<%= form_for([:admin, @user]) do |f| %>
  <%= render 'common/errors', resource: @user %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :admin %>
    <%= f.check_box :admin %>
  </div>

  <div class="actions">
    <%= f.submit "#{@user.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
