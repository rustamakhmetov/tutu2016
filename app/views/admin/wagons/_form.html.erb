<%= form_for([:admin, @train, @wagon]) do |f| %>
    <%= render 'common/errors', resource: @wagon %>

    <div class="field">
      <%= f.label :train %>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="field">
      <%= f.label :type %>
      <%= f.select :type, options_for_select(Wagon::WAGON_TYPES.invert, @wagon.type), {}, class: 'wagon_type' %>
    </div>

    <div class="field" id="top_places">
      <%= f.label :top_places %><br>
      <%= f.number_field :top_places %>
    </div>

    <div class="field" id="bottom_places">
      <%= f.label :bottom_places %><br>
      <%= f.number_field :bottom_places %>
    </div>

    <div class="field" id="side_bottom_places">
      <%= f.label :side_bottom_places %><br>
      <%= f.number_field :side_bottom_places %>
    </div>

    <div class="field" id="side_top_places">
      <%= f.label :side_top_places %><br>
      <%= f.number_field :side_top_places %>
    </div>

    <div class="field" id="sedentary_places">
      <%= f.label :sedentary_places %><br>
      <%= f.number_field :sedentary_places %>
    </div>

    <div class="actions">
      <%= f.submit "#{@wagon.new_record? ? 'Создать' : 'Изменить'}" %>
    </div>
<% end %>
