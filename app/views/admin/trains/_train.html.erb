<tr>
  <td>
    <div class="train_title" id="train_title_<%= train.id %>" data-train-id="<%= train.id %>" onmouseover="this.style.border = '1px dotted blue'" onmouseout="this.style.border=''">
        <%= train.number %>
    </div>
    <%= render 'form', train: train, hidden: true, small: true %>
  </td>
  <td><%= link_to 'Показать', [:admin, train] %></td>
  <td><%= link_to 'Изменить', edit_admin_train_path(train), class: 'edit_train', data: {train_id: train.id} %></td>
  <td><%= link_to 'Удалить', [:admin, train], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
</tr>