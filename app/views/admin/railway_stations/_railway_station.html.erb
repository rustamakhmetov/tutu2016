<tr>
  <td>
    <div id="station_title_<%= railway_station.id  %>">
        <%= railway_station.title %>
    </div>
    <%= render 'form', station: railway_station, hidden: true %>
  </td>
  <td><%= link_to t('common.action.show'), [:admin, railway_station] %></td>
